<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {%- assign collection = collections[section.settings.collection] -%}

  {% case section.settings.grid %}
    {% when 2 %}
      {%- assign max_height = 530 -%}
      {%- assign grid_item_width = 'medium-up--one-half' -%}
    {% when 3 %}
      {%- assign max_height = 345 -%}
      {%- assign grid_item_width = 'small--one-half medium-up--one-third' -%}
    {% when 4 %}
      {%- assign max_height = 250 -%}
      {%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
    {% when 5 %}
      {%- assign max_height = 195 -%}
      {%- assign grid_item_width = 'small--one-half medium-up--one-fifth' -%}
  {% endcase %}

  {%- assign product_limit = section.settings.grid | times: section.settings.rows -%}

  <ul class="grid grid--uniform grid--view-items">
    
    {% for product in collection.products limit: product_limit %}
      <li class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
        {% include 'product-card-grid', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
      </li>
    {% else %}
		
      {% for i in (1..product_limit) %}
        <li class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
          <div class="grid-view-item product-card">
            <a class="grid-view-item__link grid-view-item__image-container full-width-link" href="#">
              <span class="visually-hidden">{{ 'homepage.onboarding.product_title' | t }}</span>
            </a>
            <div class="grid-view-item__image-wrapper">
              {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="h4 grid-view-item__title" aria-hidden="true">{{ 'homepage.onboarding.product_title' | t }}</div>
            {% include 'product-price' %}
          </div>
        </li>
      {% endfor %}
    {% endfor %}
    
  </ul>
	
  {% if is_empty_collection %}
      <div class="grid__item small--text-center">
        <p class="text-center">{{ 'collections.general.no_matches' | t }}</p>
      </div>
   {% endif %}
  
  {% if section.settings.show_view_all %}
    <hr class="hr--invisible" aria-hidden="true" />
    <div class="text-center">
      <a href="{{ collection.url }}" class="btn" aria-label="{{ 'collections.general.view_all_label' | t: collection_name: collection.title }}">
        {{ 'collections.general.view_all' | t }}
      </a>
    </div>
  {% endif %}

</div>
<div id="modal"></div>
<style>
  #modal {
    display: none;
    position: absolute;
    background-size: cover;
    top: 15vh;
    width: 50%;
    margin: auto;
    height: 430px;
    min-width: 15em;
    max-width: 650px;
    border-radius: .5em;
    color: #efefef;
    font-size: 2rem;
    text-align: center;
    text-shadow: 1px 0px 3px #444;
    font-weight: 600;
    padding: 1em;
    left: 25%;
    right: 25%;
  }
  .modal--success {
    background: #222 url(https://c.tenor.com/cE3a9ICgYwIAAAAd/key-and-peele-righteous.gif) no-repeat center bottom;
  }
  .modal--error {
    background: #222 url(https://c.tenor.com/kEmm33wknM4AAAAd/key-and-peele.gif) no-repeat center bottom;
  }
  
  @media only screen and (max-width: 450px) {
    #addtocart-modal {
      left: 5%;
      right: 5%;
    }
  }
</style>
<script>
    let variantId, $productContainer, optionField, variantImgUrl, variantPrice, variantComparePrice;
      const $modal = $('#modal');
    
    function showModal(modalType, modalText){  
      if (modalType == 'success') {
          $modal.removeClass('modal--error').addClass('modal--success');
      } else if (modalType == 'error') {
        $modal.removeClass('modal--success').addClass('modal--error');
      }

      $modal.html(modalText);
      $modal.show(); 
      setTimeout(function(){
        $modal.hide();
      }, 4000);
    }

    function itemAdded(productName) {
      $.getJSON('/cart.js', function(cart) {
        
       $('#CartCount').removeClass('hide critical-hidden').html(cart.item_count +1); 
        showModal('success', `Your ${productName} was added to your cart.`);
      });
    }

    function addToCart(event, productName) {
       event.preventDefault();
		
      $.ajax({
        type: 'POST',
        url: '/cart/add.js',
        dataType: 'json',
        data: $(event.target).serialize(),
        success: itemAdded(productName),
        error: function(xhr, ajaxOptions, thrownError) {
          showModal('error', thrownError)
        } 
      });
    }

    function changeVariant(event, productUrl, productImg) {
      variantId = event.target.value;
      $productContainer = $(event.target.parentElement).parent().parent();
      optionField = $(event.target).children()[event.target.selectedIndex];
      variantPrice = $(optionField).attr('data-price');
      variantComparePrice = $(optionField).attr('data-compare_price');
      variantImgUrl = $(optionField).attr('data-img_url');
      $($productContainer).find('.buynow-button').attr('href', 'https://brass-tacks-project.myshopify.com/cart/' + variantId + ':1');
      $($productContainer).find('.full-width-link').attr('href', '{{ productUrl | within: collection }}' + productUrl + '?variant=' + variantId);
      $($productContainer).find('.variant-id__field').val(variantId);
      $($productContainer).find('.price .price__regular .price-item--regular').html(variantPrice);
      if (variantComparePrice) {
          $($productContainer).find('.price .price-item--sale').html(variantPrice);
          $($productContainer).find('.price .price__compare .price-item--regular').html(variantComparePrice);
      }
      if (variantImgUrl) {
            $($productContainer).find('.product-card__image-wrapper img').attr('srcset', 'https://cdn.shopify.com/s/files/1/0602/0310/6559/' + variantImgUrl);
      } else {
          $($productContainer).find('.product-card__image-wrapper img').attr('srcset', 'https://cdn.shopify.com/s/files/1/0602/0310/6559/' + productImg);
      }
    }

</script>



